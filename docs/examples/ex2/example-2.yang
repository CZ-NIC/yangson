module example-2 {

  yang-version "1.1";

  namespace "http://example.com/example-2";

  prefix "ex2";

  container top {
    list foo {
      key "number";
      leaf number {
        type uint8;
      }
      leaf in-words {
        type string {
          pattern "[a-z][a-z\\-]+[a-z]";
        }
      }
    }
    leaf bar {
      type boolean;
      mandatory "true";
    }
    leaf baz {
      when "not(../foo/in-words = 'fourty-two')";
      type string;
      default "hi!";
    }
  }
}
